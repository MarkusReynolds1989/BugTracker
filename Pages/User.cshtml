@page
@using BugTracker.Models
@model User
@{
    ViewData["Title"] = "User";
    var user = (Models.User) ViewData["User"];
}
<h1>Modify User</h1>
<form
    method = "post">
    <label
        for = "userId">
        User Id:
    </label>
    <input
        class = "form-control"
        id = "userId"
        name = "UserId"
        readonly
        type = "text"
        value = "@user.UserId"/>
    <label
        for = "userName">
        User Name:
    </label>
    <input
        class = "form-control"
        id = "userName"
        name = "UserName"
        type = "text"
        value = "@user.UserName"/>
    <label
        for = "firstName">
        First Name:
    </label>
    <input
        class = "form-control"
        id = "firstName"
        name = "FirstName"
        type = "text"
        value = "@user.Firstname">
    <label
        for = "lastName">
        Last Name:
    </label>
    <input
        class = "form-control"
        id = "lastName"
        name = "LastName"
        type = "text"
        value = "@user.Lastname"/>
    <label
        for = "email">
        Email:
    </label>
    <input
        class = "form-control"
        id = "email"
        name = "Email"
        type = "email"
        value = "@user.Email"/>
    <label
        for = "authLevel">
        Authorization Level:
    </label>
    <select
        asp-for = "@user.AuthLevel"
        asp-items = "Html.GetEnumSelectList<AuthLevel>()"
        class = "form-control"
        id = "authLevel"
        name = "AuthLevel">
    </select>
    <br>
    <button
        class = "btn btn-primary">
        Submit
    </button>
</form>
<form
    asp-page-handler = "delete"
    method = "post">
    <input
        hidden
        name = "UserId"
        value = "@ViewData["_userId"]"/>
    <button
        class = "btn btn-danger">
        Delete
    </button>
</form>