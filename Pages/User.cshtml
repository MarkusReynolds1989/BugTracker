@page
@model User
@{
    var list = (IList<Models.User>) @ViewData["list"];
}

<div>
    <ul class="list-group list-group-flush">
        @foreach (var user in list)
        {
            <li class="list-group-item">
                @user.UserId
                <input class="form-control" value="@user.Name"/>
                <input class="form-control" value="@user.Password"/>
                <input class="form-control" value="@user.ActiveInd.ToString()"/>
                <button class="btn alert-danger">Update</button>
            </li>
        }
    </ul>
</div>