@page
@using BugTracker.Models
@using Microsoft.AspNetCore.Http
@model CreateTicketModel
@{
    ViewData["Title"] = "Create Ticket";
}

@section Scripts
{
    <partial
        name = "Shared/_ValidationScriptsPartial"/>
}

<h1>Create Ticket</h1>

<form
    method = "post">
    <div
        class = "row">
        <div
            class = "col-sm-4">
            <label
                for = "loggerId">
                Logger Id:
            </label>
            <input
                class = "form-control"
                id = "loggerId"
                name = "LoggerId"
                readonly
                type = "number"
                value = "@HttpContext.Session.GetInt32("UserId")"/>
            <label
                for = "workerId">
                Worker Id:
            </label>
            <input
                asp-for = "WorkerId"
                class = "form-control"
                id = "workerId"
                name = "WorkerId"
                type = "number"/>
            <span
                asp-validation-for = "WorkerId"
                class = "alert-danger">
            </span>
            <br>
            <label
                for = "statusIndCd">
                Ticket Status:
            </label>
            <select
                asp-items = "Html.GetEnumSelectList<StatusIndCd>()"
                class = "form-control"
                id = "statusIndCd"
                name = "StatusIndCd">
            </select>
        </div>
        <div
            class = "col">
            <label
                for = "_title">
                Title:
            </label>
            <input
                asp-for = "_Title"
                class = "form-control"
                id = "_title"
                name = "_Title"
                type = "text"/>
            <span
                asp-validation-for = "_Title"
                class = "alert-danger">
            </span>
            <br>
            <label
                for = "desc">
                Description:
            </label>
            <textarea
        asp-for="Description"
        class = "form-control"
        id = "desc"
        name = "Description">
        </textarea>
            <span
                asp-validation-for = "Description"
                class = "alert-danger">
            </span>
        </div>
    </div>
    <br>
    <br>
    <button
        class = "btn btn-primary"
        type = "submit">
        Submit
    </button>
</form>