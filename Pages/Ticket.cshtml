@page
@model Ticket

@{
    var ticket = (Models.Ticket) ViewData["ticket"];
}

<div class="row">
    <div class="col">
        <input type="text"
               class="input-group"
               id="ticketId"
               name="TicketId"
               value="@ticket.TicketId"/>
        <input type="text"
               class="input-group"
               id="loggerId"
               name="LoggerId"
               value="@ticket.LoggerId"/>
        <input type="text"
               class="input-group"
               id = "workerId"
               name = "WorkerId"
               value="@ticket.WorkerId"/>
        <br>
        <select class="input-group"
                id="statusIndCd"
                name="StatusIndCd">
            <option>@ticket.StatusIndCd</option>
            <option>Close</option>
            <option>Pending</option>
        </select>
    </div>
    <!-- End of column -->

    <div class="col">
        <input type="text"
               class="input-group"
               id="title"
               name="Title"
               value="@ticket.Title"/>
        <textarea id = "desc" name = "Desc">@ticket.Description</textarea>
    </div>
</div>

<br>
<textarea cols="50px" 
          class="input-group"
          id = "resolution"
          name = "Resolution">@ticket.Resolution</textarea>
<br>
<input type="button"
       class="btn btn-primary"
       value="Save"/>